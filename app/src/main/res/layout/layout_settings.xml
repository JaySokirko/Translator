<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <TableRow
            android:id="@+id/table_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="80dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/view_rounded"
                android:padding="5dp"
                android:text="@string/change_language"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_change_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_action_global"
                tools:ignore="RelativeOverlap" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/table_row1"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/view_rounded"
                android:padding="5dp"
                android:text="@string/change_views_background"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_change_views_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_action_image_settings"
                tools:ignore="RelativeOverlap" />
        </TableRow>

</RelativeLayout>