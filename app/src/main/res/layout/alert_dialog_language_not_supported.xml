<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_language_not_supported_background"
    android:background="@drawable/animation_list">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/language_is_not_support"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/alert_dialog_cancel_open_language_settings"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:src="@drawable/ic_action_cancel_dialog"
            android:contentDescription="@drawable/ic_action_cancel_dialog"
            android:layout_marginBottom="40dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/alert_dialog_open_language_settings"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_action_download_language"
            android:contentDescription="@drawable/ic_action_download_language" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</FrameLayout>