<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/choice_language_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acticities.ChoiceLanguageActivity"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image_view_choice_language"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/london"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_choice_language_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_your_language"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/view_rounded"
            android:padding="5dp"/>

        <ListView
            android:layout_marginTop="20dp"
            android:id="@+id/list_view_choice_language"
            android:layout_width="wrap_content"
            android:layout_height="400dp"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_choice_language_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            app:fabSize="normal"
            android:src="@drawable/ic_action_done"
            />

    </LinearLayout>


</FrameLayout>