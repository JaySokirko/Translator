<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choice_language_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".acticities.ChoiceLanguageActivity">


    <ImageView
        android:id="@+id/image_view_choice_language"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/london" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_choice_language_list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/view_rounded_dark_semitransparent"
                android:padding="5dp"
                android:text="@string/select_your_language"
                android:textColor="@color/colorText"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/list_view_choice_language"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginTop="20dp" />



                <Button
                    android:id="@+id/button_choice_language_next"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:background="@drawable/view_rounded_gradient"/>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</FrameLayout>