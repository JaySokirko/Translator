<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TranslatorActivity"
    tools:showIn="@layout/activity_translator"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_translator_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@drawable/london"
        android:scaleType="centerCrop"
        android:src="@drawable/london" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.TranslatorActivity"
            tools:showIn="@layout/activity_translator">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_сonteiner_settings">

            </FrameLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>





</FrameLayout>