<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_choice_language_list_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/london"
        android:scaleType="centerCrop"
        android:contentDescription="@drawable/london" />

    <TextView
        android:id="@+id/text_view_choice_language_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="English"
        android:textSize="18sp"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/flag_list_view"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_united_kingdom_flag"
        android:contentDescription="@drawable/ic_united_kingdom_flag" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite" />

</FrameLayout>